<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="item_form">
        <%= render partial: 'items/form', locals: { item: @item } %>
      </section>
    </aside>
    <div class="col-md-8">
      <% if current_user.items.any? %>
        <h3>Current Items</h3>
          <ol class="items">
            <%= render partial: 'items/item', collection: @items %>
          </ol>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">  
    <h1>Welcome to the Daily Agenda App</h1>
    <h2>
      This is a self-destructing to-do list application to keep you focused on the things that really matter.

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>